<import src="../../templates/recommend-list.wxml"></import>
<view class="RecommendLayout" wx:if="{{recommendList&&recommendList!=[]}}">
    <view class="RecommendTitle">推荐活动</view>
    <template is="tempRecommendList" data="{{activityList:recommendList}}"></template>
</view>

<view class="actionBar">
    <view catchtap="toHome" class="addFav {{activityInfo.status==1?'short':'long'}}">
        <image class="favIcon" src="../../resource/images/home.png"></image>
        <view class="favText">收藏</view>
    </view>

    <view class="shareGood {{activityInfo.status==1?'short':'long'}}">
        <button class="shareBtn" openType="share">
            <image class="shareIcon" src="../../resource/images/share.png"></image>
            <view class="shareText">分享</view>
        </button>
    </view>

    <view  class="callUser">
        <block wx:if="{{activityInfo.status==0}}">
            <view class="addbargain bar_normal" wx:if="{{activityInfo.status==0}}">活动暂未开始</view>
        </block>
        <form bindsubmit="AddHelp" reportSubmit="true" wx:if="{{activityInfo.status==1}}">
            <button class="addbargain" formType="submit" type="default">
                <view class="btnText">开启助力!</view>
            </button>
        </form>
        <view class="addbargain bar_normal" wx:if="{{activityInfo.status==2}}">活动已结束</view>
    </view>
</view>
