<!-- 商品详情+评论模块 -->
<view class="marg-t16 tx-14 tx-999 tx-c lh-1 bg-fff bord-b1 bord-c flex1 flex-r">
    <text catchtap="widgetsToggle1" class="box padd-a16 w50e {{item.open?'bord-b3':''}}" id="{{item.id}}" style="{{item.open?'color:'+mainColor+' !important;':''}}; {{item.open?'border-color:'+mainColor:''}};" wx:for="{{xiangqing}}">{{item.text}}</text>
</view>
<view class="padd-tb16 tx-13 tx-333 lh-105 bg-fff shp-xq {{currentTab==0?'':'hide'}}">
    <!-- 富文本转换 -->
    <view class="wxParse">
        <template is="wxParse" data="{{wxParseData:ProductContent.nodes}}"></template>
    </view>
</view>
<view class="padd-tb16 tx-999 flex flex-c {{currentTab==1?'':'hide'}}" wx:if="{{commentInfoList.length==0}}">
        <span class="iconfont icon-none" style="font-size:180rpx;"></span>
        <text class="tx-13 lh-1 marg-t16">亲，暂无任何评论！</text>
</view>
<view class="padd-rl16 bg-fff {{currentTab==1?'':'hide'}}">
        <text class="block padd-tb16 tx-13 tx-999 lh-1 bord-b1 bord-c">评价({{commentInfoList.length}})</text>
        <view class="end-nav-b">
            <view class="bord-b1 bord-c" wx:for="{{commentInfoList}}">
                <view class="padd-tb16 flex1 flex-r">
                    <image class="mj-img radi-50e marg-r8" src="{{item.AccountImage}}"></image>
                    <view class="flex-1">
                        <text class="block tx-14 tx-333 lh-105">{{item.NickName}}</text>
                        <view class="marg-t8 flex flex-r">
                            <view class="star row pos-r tx-999">
                                <span class="icon iconfont icon-star tx-13"></span>
                                <span class="icon iconfont icon-star tx-13"></span>
                                <span class="icon iconfont icon-star tx-13"></span>
                                <span class="icon iconfont icon-star tx-13"></span>
                                <span class="icon iconfont icon-star tx-13"></span>
                                <view class="pos-a tl0 ovfl row  on{{item.StarNum}}" style="color: {{mainColor}} !important;">
                                    <span class="icon iconfont icon-star-on tx-13 bg-fff"></span>
                                    <span class="icon iconfont icon-star-on tx-13 bg-fff"></span>
                                    <span class="icon iconfont icon-star-on tx-13 bg-fff"></span>
                                    <span class="icon iconfont icon-star-on tx-13 bg-fff"></span>
                                    <span class="icon iconfont icon-star-on tx-13 bg-fff"></span>
                                </view>
                            </view>
                            <text class="flex-1 tx-13 tx-999 tx-r lh-1">{{item.CreateTime}}</text>
                        </view>
                        <text class="marg-t8 block tx-13 tx-333 lh-105">{{item.Content}}</text>
                        <view class="marg-t8 flex flex-r" wx:if="{{item.ImageList.length>0}}">
                            <view class="w33e" wx:for="{{item.ImageList}}" wx:for-item="itemImg">
                                <image class="marg-rlau zh-img2" src="{{itemImg.img}}"></image>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="padd-tb16 bord-t1 bord-c flex1 flex-r" wx:if="{{item.Replys}}">
                    <view class="mj-img marg-r8"></view>
                    <!-- <view class="flex-1">
