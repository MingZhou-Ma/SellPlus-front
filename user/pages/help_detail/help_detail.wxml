                            <text class="tx-13 tx-999 lh-1">{{item.ReplyTime}}</text>
                        </view>
                        <text class="marg-t8 block tx-13 tx-333 lh-105">{{item.Replys}}</text>
                    </view> -->
                </view>
            </view>
        </view>
    </view>

