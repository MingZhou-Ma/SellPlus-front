<view class="SwiperLayout">
    <view catchtap="toHome" class="toHome">
        <image class="toHomeico" src="../../resource/images/home_w.png"></image>
        <view class="toHomebg"></view>
    </view>
    <swiper autoplay="true" class="swiper" indicatorDots="true" interval="10000">
        <swiper-item wx:for="{{activityInfo.img}}" wx:key="id">
            <image mode="aspectFill" src="{{item}}" style="width:100%;height:400rpx;"></image>
        </swiper-item>
    </swiper>
    <view class="PriceBar">
        <view class="LeftPrice">
            <view class="LowPrice">
                <text class="YuanIcon">助力价￥</text>{{activityInfo.helpprice}}</view>
            <view class="OldPrice">原价￥{{activityInfo.oldprice}}</view>
        </view>
        <view class="RightTime">
            <view class="TimeText">
                <block wx:if="{{activityInfo.status==0}}">
                    <view class="CountDownText">活动开始时间</view>
                    <view class="CountDown">{{activityInfo.format_endtime}}</view>
                </block>
                <block wx:if="{{activityInfo.status==1}}">
                    <view class="CountDownText">活动结束时间</view>
                    <view class="CountDown">{{activityInfo.format_endtime}}</view>
                </block>
            </view>
        </view>
        <view class="clear"></view>
    </view>
</view>
<view class="activityInfo">
    <view class="activityTitle">
{{activityInfo.title}}
</view>
    <view class="RightStock">
        <text class="StockNum">{{activityInfo.stock}}</text>
        <text class="StockText">剩余库存</text>
    </view>
</view>
<view class="infoList">
    <view class="infoItem">
        <view class="infoTips">
            <image class="infoIcon" src="../../resource/images/success.png"></image>
            <block>活动为服务类活动，交付方式为购买后用户到店出示订单</block>
        </view>
        <view class="clear"></view>
    </view>
    <view class="infoItem" >
        <text class="infoTitle">此商品有效期至</text>
        <text class="infoText">{{activityInfo.validity}}</text>
        <view class="clear"></view>
    </view>
    <view class="infoItem">
        <text class="infoTitle">助力人数</text>
        <text class="infoText">{{activityInfo.helpnum}}人</text>
        <view class="clear"></view>
    </view>
    <view class="infoItem">
        <text class="infoTitle">付款方式</text>
        <text class="infoText">
            <block>到店付款</block>
        </text>
        <view class="clear"></view>
    </view>
</view>

<view class="businessInfo" wx:if="{{activityInfo.business.name!=''}}">
    <view class="businessTitle">适用门店</view>
    <view bindtap="OpenBusiness" class="businessLeft">
        <view class="businessName">{{activityInfo.business.name}}</view>
        <view class="businessAdr">{{activityInfo.business.address}}</view>
    </view>
    <view bindtap="CallBusiness" class="businessRight">
        <image class="businessTel" src="../../resource/images/tel.png"></image>
    </view>
    <view class="clear"></view>
</view>

<view class="goodContent">
    <view class="ContentTitle">商品详情</view>
    <view class="goodDesc">
        <view class="goodFreight">商品描述加图片</view>
    </view>
</view>

<import src="../../templates/recommend-list.wxml"></import>
<view class="RecommendLayout" wx:if="{{recommendList&&recommendList!=[]}}">
    <view class="RecommendTitle">推荐活动</view>
    <template is="tempRecommendList" data="{{activityList:recommendList}}"></template>
</view>

<view class="actionBar">
    <view catchtap="toHome" class="addFav {{activityInfo.status==1&&activityInfo.stock!=0?'short':'long'}}">
        <image class="favIcon" src="../../resource/images/home.png"></image>
        <view class="favText">首页</view>
    </view>

    <view class="shareGood {{activityInfo.status==1&&activityInfo.stock!=0?'short':'long'}}">
        <button class="shareBtn" openType="share">
            <image class="shareIcon" src="../../resource/images/share.png"></image>
            <view class="shareText">分享</view>
        </button>
    </view>

    <view catchtap="CallUser" class="callUser">
        <block wx:if="{{activityInfo.status==0}}">
            <view class="addbargain bar_normal" wx:if="{{activityInfo.status==0}}">活动暂未开始</view>
        </block>
        <form bindsubmit="AddHelp" reportSubmit="true" wx:if="{{activityInfo.status==1&&join_status==0}}">
            <button class="addbargain" formType="submit" type="default">
                <view class="btnPrice">￥{{activityInfo.helpprice}}</view>
                <view class="btnText">开启助力!</view>
            </button>
        </form>
        <form bindsubmit="ToOpAddorder" reportSubmit="true" wx:if="{{activityInfo.status==1&&join_status==1}}">
            <button class="addbargain" formType="submit" type="default">
                <view class="btnText">您已开启助力</view>
            </button>
        </form>
        <view class="addbargain bar_normal" wx:if="{{activityInfo.status==2}}">活动已结束</view>
        <view class="addbargain bar_normal" wx:if="{{activityInfo.stock==0&&activityInfo.status==1}}">已无库存</view>
    </view>
</view>
