<template name="RecommendPanicbuyLayout">
    <view class="RecommendList">
        <view class="ListItem" wx:for="{{activityList}}" wx:for-item="itemName" wx:key="id">
            <navigator class="tourl" url="../../pages/panicbuy_detail/panicbuy_detail?activityid={{itemName.id}}">
                <view class="stock">剩余{{itemName.stock}}份</view>
                <image class="pic" mode="aspectFill" src="{{itemName.pic}}"></image>
                <view class="rightInfo">
                    <view class="itemTitle">{{itemName.title}}</view>
                    <view class="bottominfo">
                        <view class="leftPrice">
                            <text class="lowText">￥</text>
                            <text class="lowPrice">{{itemName.nowprice}}</text>
                            <text class="vipPrice" wx:if="{{itemName.vipprice!=''&&itemName.vipprice!='0.00'&&itemName.vipprice!=0&&itemName.vipprice!=null}}">黑卡<text class="lowText">￥</text>{{itemName.vipprice}}</text>
                            <text class="oldPrice" wx:if="{{itemName.vipprice==''||itemName.vipprice=='0.00'||itemName.vipprice==0||itemName.vipprice==null}}">￥{{itemName.oldprice}}</text>
                        </view>
                        <view class="rightBtn">
                            <view class="goDetail" wx:if="{{itemName.status==1&&itemName.stock>0}}">去抢购</view>
                            <view class="goDetail normal" wx:if="{{itemName.status==1&&itemName.stock==0}}">已无库存</view>
                            <view class="goDetail normal" wx:if="{{itemName.status==0}}">即将开始</view>
                            <view class="goDetail normal" wx:if="{{itemName.status==2}}">活动结束</view>
                        </view>
                        <view class="clear"></view>
                    </view>
                    <view class="clear"></view>
                </view>
            </navigator>
        </view>
    </view>
</template>
